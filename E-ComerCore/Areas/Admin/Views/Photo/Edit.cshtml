
@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model E_ComerCore.Models.Photo

<div class="content-wrapper pl-3">
    <section class="content-header">
        <h1>
           Edit Photo of @ViewBag.Product

        </h1>

    </section>

    <section class="content">

        <div class="row">

            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Photo Information</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form method="post" role="form" asp-area="admin" asp-controller="photo" asp-action="edit" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Photo</label>
                                <input type="file" class="form-control" name="fileUpload" accept="image/*">
                                <br/>
                                <img src="~/products/@Model.Name" width="120" />
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" asp-for="Status"> Status
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" asp-for="Featured"> Featured
                                </label>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="ProductId" />
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </form>
                </div>

            </div>

        </div>

    </section>
    </div>