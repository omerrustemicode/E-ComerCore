
@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model E_ComerCore.Models.Account
<div class="content-wrapper pl-3">


    <section class="content">

        <div class="row">

            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Customer Information</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form method="post" role="form" asp-area="admin" asp-controller="customer" asp-action="edit">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Username</label>
                                <input type="text" class="form-control" asp-for="Username" required readonly>
                            </div>

                            <div class="form-group">
                                <label for="name">Password</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Enter New Password">
                            </div>

                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Enter Full Name" required>
                            </div>

                            <div class="form-group">
                                <label for="name">Email</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email" required>
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" asp-for="Status"> Status
                                </label>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </form>
                </div>

            </div>

        </div>

    </section>
    </div>