@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper pl-3">

    <section class="content">
       
        <div class="row">

            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Customer List</h3>
                    </div>
                 
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="customerProductListTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var customer in ViewBag.customers)
                                {
                                
                                <tr>
                                    <td>@customer.Id</td>
                                    <td>@customer.Username</td>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>@(customer.Status ? "Active" : "Inactive")</td>

                                    <td>
                                        <a asp-area="admin" asp-controller="customer" asp-action="edit"
                                           asp-route-id="@customer.Id">Edit</a> 
                                    </td>
                                </tr>
                              }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>
</div>
<script>
    $(function () {
        $('#customerProductListTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>