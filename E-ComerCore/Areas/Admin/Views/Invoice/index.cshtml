@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper pl-3">

    <section class="content">
       
        <div class="row">

            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Invoice List</h3>
                    </div>
                 
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="customerProductListTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Created</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in ViewBag.invoices)
                                {

                                    <tr>
                                        <td>@invoice.Id</td>
                                        <td>@invoice.Name</td>
                                        <td>@invoice.Created.ToString("MM/dd/yyy")</td>
                                        <td>@(invoice.Status == 1 ? "Pending" : "Done")</td>
                                        <td>
                                            <a asp-area="admin" asp-controller="invoice" asp-action="details" asp-route-id="@invoice.Id">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Created</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>
</div>
<script>
    $(function () {
        $('#customerProductListTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>