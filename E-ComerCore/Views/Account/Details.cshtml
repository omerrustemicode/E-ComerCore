
@{
    ViewData["Title"] = "Invoice Details";
    Layout = "~/Views/Shared/_userpanel.cshtml";
}

<div class="content-wrapper pl-3">

    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Customer List</h3>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="customerProductListTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Product ID</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Sub Total</th>
              
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoiceDetail in ViewBag.invoiceDetails)
                                {

                                <tr>
                                    <td>@invoiceDetail.Product.Id</td>
                                    <td>@invoiceDetail.Product.Name</td>
                                    <td>@invoiceDetail.Price</td>
                                    <td>@invoiceDetail.Quantity</td>
                                    <td>
                                        @(invoiceDetail.Price * invoiceDetail.Quantity)
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Product ID</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Sub Total</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>

        </div>

    </section>
</div>
<script>
    $(function () {
        $('#customerProductListTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>